# =============================================================================
# ENVIRONMENT VARIABLES TEMPLATE FOR NURSING CONFERENCES PROJECT
# =============================================================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env file to version control - it contains sensitive data
# =============================================================================

# =============================================================================
# SANITY CMS CONFIGURATION (REQUIRED)
# =============================================================================
# Get these values from: https://sanity.io/manage
# Project: Nursing Conferences CMS
NEXT_PUBLIC_SANITY_PROJECT_ID=n3no08m3
NEXT_PUBLIC_SANITY_DATASET=production
NEXT_PUBLIC_SANITY_API_VERSION=2023-05-03

# Sanity API Token (CRITICAL - Required for PDF uploads and write operations)
# Get from: https://sanity.io/manage -> API -> Tokens
# Permissions: Editor or Admin (required for file uploads)
SANITY_API_TOKEN=your_sanity_api_token_here

# =============================================================================
# EMAIL CONFIGURATION (REQUIRED FOR RECEIPTS)
# =============================================================================
# SMTP Server Configuration for sending payment receipts
SMTP_HOST=smtp.hostinger.com
SMTP_PORT=465
SMTP_SECURE=true
SMTP_USER=contactus@intelliglobalconferences.com
SMTP_PASS=your_email_password_here
FROM_EMAIL=contactus@intelliglobalconferences.com

# Email aliases for compatibility
EMAIL_FROM=contactus@intelliglobalconferences.com
EMAIL_FROM_NAME=International Global Conferences

# =============================================================================
# PAYMENT GATEWAY CONFIGURATION (OPTIONAL)
# =============================================================================

# Razorpay Configuration (for Indian payments)
NEXT_PUBLIC_RAZORPAY_KEY_ID=your_razorpay_key_id_here
RAZORPAY_SECRET_KEY=your_razorpay_secret_key_here

# PayPal Configuration (for international payments)
NEXT_PUBLIC_PAYPAL_CLIENT_ID=your_paypal_client_id_here
PAYPAL_CLIENT_SECRET=your_paypal_client_secret_here
NEXT_PUBLIC_PAYPAL_ENVIRONMENT=production
PAYPAL_WEBHOOK_ID=your_paypal_webhook_id_here

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
# Next.js Configuration
NEXT_TELEMETRY_DISABLED=1
NODE_ENV=production

# Security Configuration
ALLOWED_ORIGINS=https://your-domain.com,https://nursing-conferences-cms.sanity.studio

# Authentication (if using NextAuth)
NEXTAUTH_URL=https://your-domain.com
NEXTAUTH_SECRET=your_nextauth_secret_here

# API Security
API_SECRET_KEY=your_api_secret_key_here

# =============================================================================
# DEVELOPMENT/TESTING CONFIGURATION (OPTIONAL)
# =============================================================================
# UPI Test Mode (for development)
NEXT_PUBLIC_UPI_TEST_MODE=false

# =============================================================================
# DEPLOYMENT NOTES
# =============================================================================
